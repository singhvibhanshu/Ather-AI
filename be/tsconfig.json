{
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment & Module Settings
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "esnext",
    "lib": ["esnext"],

    // Output Settings
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Recommended Strictness & Style
    "strict": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    
    // Stricter Typechecking (Optional but good)
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true
  },
  "include": ["src/**/*"], // Explicitly include the src directory
  "exclude": ["node_modules"]
}